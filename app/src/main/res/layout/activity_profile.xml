<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ima_pro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:id="@+id/linear">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:src="@drawable/avatar"
                tools:ignore="MissingClass"
                android:padding="10dp"
                android:background="@drawable/ic_rectangle"/>

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Arlene Mccoy"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:layout_below="@+id/linear"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/edtname"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:text="Arlene Mccoy"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtname"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="E-mail"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/edit_email"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/email"
            android:layout_marginStart="20dp"
            android:text="prelookstudio@gmail.com"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@+id/edit_email"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/edit_sdt"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="phone"
            android:layout_below="@+id/sdt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/btn_edtProfile"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="Edit profile"
            android:textColor="#ffffff"
            android:layout_below="@id/edit_sdt"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button1"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>